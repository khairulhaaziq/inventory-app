{
  "name": "backend",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "tsup src/index.ts --platform=node --format=cjs,esm",
    "build:tsc": "tsc --build",
    "build:vite": "vite build",
    "start": "node dist/index.cjs",
    "dev": "tsx watch src/index.ts",
    "dev:tsc": "tsc --watch --preserveWatchOutput",
    "dev:node": "node --watch dist/index.js",
    "dev:tsup": "pnpm run build --watch",
    "dev:all": "concurrently --kill-others \"npm run dev:tsup\" \"npm run dev:tsc\" \"npm run dev:node\"",
    "lint": "tsc",
    "seed": "tsx scripts/seed.ts",
    "setup": "pnpm install && npx prisma migrate dev && npx prisma generate",
    "db:migrate": "npx prisma migrate dev --name user-entity --create-only && npx prisma generate",
    "db:push": "npx prisma db push",
    "test": "vitest",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down -v",
    "docker:test": "npx env-cmd -f .env.test npx prisma migrate deploy && vitest",
    "test:unit": "vitest -c ./vitest.config.unit.ts",
    "test:unit:ui": "vitest -c ./vitest.config.unit.ts --ui",
    "test:int": "./scripts/run-integration.sh",
    "test:int:ui": "./scripts/run-integration.sh --ui"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@faker-js/faker": "^8.4.1",
    "@types/bcrypt": "^5.0.2",
    "@types/node": "^20.11.26",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^9.0.8",
    "prisma": "^5.11.0",
    "supertest": "^6.3.4",
    "ts-node": "^10.9.2",
    "tsup": "^8.0.2",
    "tsx": "^4.7.1",
    "typescript": "^5.4.2",
    "vitest": "^1.3.1",
    "vitest-mock-extended": "^1.3.1"
  },
  "dependencies": {
    "@hono/node-server": "^1.8.2",
    "@lucia-auth/adapter-prisma": "^4.0.1",
    "@prisma/client": "^5.11.0",
    "bcrypt": "^5.1.1",
    "hono": "^4.1.0",
    "lucia": "^3.1.1",
    "oslo": "^1.1.3",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  }
}
